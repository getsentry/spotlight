{
  "extends": "@spotlightjs/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2024"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": false,
    "target": "esnext",
    "module": "nodenext",
    /* paths */
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
