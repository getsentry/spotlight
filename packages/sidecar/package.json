{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "1.11.4",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "start": "./dist/server.js",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "clean": "rimraf dist"
  },
  "files": ["dist"],
  "bin": {
    "spotlight-sidecar": "dist/server.js"
  },
  "main": "dist/src/main.js",
  "module": "dist/src/main.js",
  "types": "dist/src/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/main.js",
      "types": "./dist/src/main.d.ts"
    },
    "./vite-plugin": {
      "import": "./dist/src/vite-plugin.js",
      "types": "./dist/src/vite-plugin.d.ts"
    },
    "./constants": {
      "import": "./dist/src/constants.js",
      "types": "./dist/src/constants.d.ts"
    }
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@sentry/core": "catalog:",
    "@sentry/node": "catalog:",
    "kleur": "^4.1.5",
    "launch-editor": "^2.9.1"
  },
  "devDependencies": {
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "tsdown": "^0.13.3",
    "typescript": "catalog:"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=18"
  }
}
