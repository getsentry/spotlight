{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "2.1.3",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "start": "tsx --watch ./src/server.ts",
    "dev": "tsx --watch ./src/server.ts",
    "build": "NODE_ENV=production tsc",
    "clean": "rimraf dist",
    "sample": "node _fixtures/send_to_sidecar.cjs",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "files": ["dist"],
  "bin": {
    "spotlight-sidecar": "dist/server.js"
  },
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./parser": {
      "import": "./dist/parser/index.js",
      "types": "./dist/parser/index.d.ts"
    },
    "./format": {
      "import": "./dist/format/index.js",
      "types": "./dist/format/index.d.ts"
    }
  },
  "dependencies": {
    "@hono/mcp": "^0.1.1",
    "@hono/node-server": "^1.19.3",
    "@jridgewell/trace-mapping": "^0.3.25",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@sentry/core": "catalog:",
    "@sentry/node": "catalog:",
    "eventsource": "^4.0.0",
    "hono": "^4.9.7",
    "launch-editor": "^2.9.1",
    "mcp-proxy": "^5.6.0",
    "uuidv7": "^1.0.2",
    "zod": "^3"
  },
  "devDependencies": {
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "fetch-event-stream": "^0.1.5",
    "tsx": "^4.20.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=20"
  }
}
