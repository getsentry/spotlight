{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "2.4.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "start": "tsx --watch ./src/run.ts",
    "dev": "tsx --watch ./src/run.ts",
    "build": "NODE_ENV=production tsc && tsc-alias",
    "clean": "rimraf dist",
    "sample": "node _fixtures/send_to_sidecar.cjs",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "files": ["dist"],
  "bin": {
    "spotlight-sidecar": "dist/run.js"
  },
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./parser": {
      "import": "./dist/parser/index.js",
      "types": "./dist/parser/index.d.ts"
    },
    "./format": {
      "import": "./dist/formatters/index.js",
      "types": "./dist/formatters/index.d.ts"
    },
    "./formatters/md/errors": {
      "import": "./dist/formatters/md/errors.js",
      "types": "./dist/formatters/md/errors.d.ts"
    },
    "./formatters/md/event": {
      "import": "./dist/formatters/md/event.js",
      "types": "./dist/formatters/md/event.d.ts"
    }
  },
  "dependencies": {
    "@hono/mcp": "^0.1.5",
    "@hono/node-server": "^1.19.3",
    "@jridgewell/trace-mapping": "^0.3.25",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@sentry/core": "catalog:",
    "@sentry/node": "catalog:",
    "chalk": "^5.6.2",
    "eventsource": "^4.0.0",
    "fast-fuzzy": "^1.12.0",
    "hono": "^4.10.3",
    "launch-editor": "^2.9.1",
    "logfmt": "^1.4.0",
    "mcp-proxy": "^5.6.0",
    "uuidv7": "^1.0.2",
    "zod": "^3"
  },
  "devDependencies": {
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/logfmt": "^1.2.6",
    "@types/node": "catalog:",
    "fetch-event-stream": "^0.1.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=20"
  }
}
