---
import ButtonLink from "./ButtonLink.astro";
import Footer from "./Footer.astro";
import GetStarted from "./GetStarted.astro";
import MCPHero from "./MCPHero.astro";
import FeatureGrid from "./FeatureGrid.astro";
---

<style>
  .landing-container {
    max-width: 100%;
    margin: 0 auto;
    overflow: hidden;
  }

  .section {
    padding: 2rem 0;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .divider {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2.5rem auto;
    max-width: 1200px;
  }

  .tagline {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    margin: 1.5rem auto 2.5rem;
    max-width: 600px;
    line-height: 1.5;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta-section {
    text-align: center;
    padding: 4rem 0 3rem;
    background: radial-gradient(
      circle at center,
      rgba(165, 180, 252, 0.1) 0%,
      transparent 70%
    );
  }

  .cta-title {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .cta-subtitle {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
</style>

<div class="landing-container">
  <MCPHero />

  <div class="divider"></div>

  <div class="section">
    <GetStarted />
  </div>

  <div class="divider"></div>

  <div class="section">
    <FeatureGrid />
  </div>

  <div class="cta-section">
    <h2 class="cta-title">Ready to debug like a pro?</h2>
    <p class="cta-subtitle">
      Join developers using Spotlight to fix bugs faster
    </p>
    <div
      style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;"
    >
      <ButtonLink href="/about/" variant="primary" size="large">
        Learn More
      </ButtonLink>
      <ButtonLink
        href="https://github.com/getsentry/spotlight"
        variant="secondary"
        size="large"
      >
        View on GitHub
      </ButtonLink>
    </div>
  </div>

  <Footer />
</div>
