<style>
  .hero-container {
    min-height: 45vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2.5rem 2rem;
    position: relative;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 600;
    text-align: center;
    margin-bottom: 1.5rem;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    text-align: center;
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .command-box {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(165, 180, 252, 0.3);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    padding-right: 3.5rem;
    font-family: "SF Mono", "Monaco", "Inconsolata", "Fira Code", monospace;
    font-size: 0.95rem;
    color: #a5b4fc;
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .command-box:hover {
    border-color: rgba(165, 180, 252, 0.6);
    background: rgba(0, 0, 0, 0.8);
    transform: translateY(-2px);
    box-shadow: 0 10px 40px rgba(165, 180, 252, 0.2);
  }

  .command-text {
    white-space: nowrap;
    user-select: all;
  }

  .copy-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0.5rem;
    background: rgba(165, 180, 252, 0.1);
    border: 1px solid rgba(165, 180, 252, 0.3);
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.7rem;
    white-space: nowrap;
  }

  .copy-button:hover {
    background: rgba(165, 180, 252, 0.2);
    border-color: rgba(165, 180, 252, 0.5);
    color: rgba(255, 255, 255, 0.9);
  }

  .copy-button.copied {
    background: rgba(34, 197, 94, 0.2);
    border-color: rgba(34, 197, 94, 0.5);
    color: rgb(34, 197, 94);
  }

  .terminal-prompt {
    color: rgba(255, 255, 255, 0.4);
    user-select: none;
  }

  .badges {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .badge-icon {
    width: 16px;
    height: 16px;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .pulse {
    animation: pulse 2s infinite;
  }

  .tagline {
    font-size: 1.375rem;
    color: rgba(255, 255, 255, 0.85);
    text-align: center;
    margin: 0 auto 2rem;
    max-width: 700px;
    line-height: 1.6;
    font-weight: 400;
  }

  .toc-section {
    margin-top: 0;
  }

  .toc-title {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    text-align: center;
  }

  .toc-links {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .toc-link {
    color: #a5b4fc;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    position: relative;
    padding: 0.25rem 0.5rem;
    border: 1px solid transparent;
    border-radius: 4px;
  }

  .toc-link:hover {
    color: #c7d2fe;
    background: rgba(165, 180, 252, 0.1);
    border-color: rgba(165, 180, 252, 0.2);
  }
</style>

<div class="hero-container">
  <img
    src="images/spotlight.png"
    alt="Spotlight in action"
    class="hero-image"
    style="width: 100%; height: auto; margin-bottom: 1.5rem;"
  />

  <div class="command-box" id="mcp-command">
    <span class="terminal-prompt">$</span>
    <span class="command-text">npx @spotlightjs/spotlight --stdio-mcp</span>
    <button class="copy-button" id="copy-btn">Copy</button>
  </div>

  <div class="toc-section">
    <nav class="toc-links">
      <a href="#cursor-config" class="toc-link">Configure Cursor</a>
      <a href="#get-started" class="toc-link">Get Started</a>
      <a href="#features" class="toc-link">Features</a>
    </nav>
  </div>
</div>

<script>
  const copyBtn = document.getElementById("copy-btn");
  const commandBox = document.getElementById("mcp-command");

  if (copyBtn && commandBox) {
    const copyCommand = () => {
      const commandText = "npx @spotlightjs/spotlight --stdio-mcp";
      navigator.clipboard.writeText(commandText).then(() => {
        copyBtn.textContent = "Copied!";
        copyBtn.classList.add("copied");
        setTimeout(() => {
          copyBtn.textContent = "Copy";
          copyBtn.classList.remove("copied");
        }, 2000);
      });
    };

    copyBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      copyCommand();
    });

    commandBox.addEventListener("click", copyCommand);
  }
</script>
