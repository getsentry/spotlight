<style>
  .features-container {
    margin: 3rem 0;
    scroll-margin-top: 2rem;
  }

  .features-title {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .features-subtitle {
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .feature-card {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(165, 180, 252, 0.15);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #a5b4fc, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feature-card:hover {
    background: rgba(0, 0, 0, 0.5);
    border-color: rgba(165, 180, 252, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    margin-bottom: 1rem;
    padding: 0.5rem;
    background: rgba(165, 180, 252, 0.1);
    border-radius: 10px;
    color: #a5b4fc;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
  }

  .feature-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-highlight {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.4rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.825rem;
  }

  .check-icon {
    width: 16px;
    height: 16px;
    color: #86efac;
    flex-shrink: 0;
  }

  .integration-badges {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .badge {
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
  }
</style>

