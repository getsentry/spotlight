---
import { Fragment } from 'react';
const { href, variant = 'primary', size = 'normal' } = Astro.props;

// Used to override the default hero component
---

<style>
  .link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: fit-content;
    cursor: pointer;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border-radius: 0.5rem;
    border: 1px solid transparent;
  }

  /* Size variants */
  .link.normal {
    height: 2.75rem;
    padding: 0 1.5rem;
    font-size: 1rem;
  }

  .link.large {
    height: 3.25rem;
    padding: 0 2rem;
    font-size: 1.125rem;
  }

  /* Style variants */
  .link.primary {
    color: #000;
    background: linear-gradient(135deg, #a5b4fc 0%, #c7d2fe 100%);
    border-color: #a5b4fc;
  }

  .link.primary:hover {
    background: linear-gradient(135deg, #c7d2fe 0%, #e0e7ff 100%);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(165, 180, 252, 0.3);
  }

  .link.secondary {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(165, 180, 252, 0.4);
  }

  .link.secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(165, 180, 252, 0.6);
    transform: translateY(-2px);
  }
</style>

<a class={`link ${variant} ${size}`} href={href}><slot /></a>
