{
  "extends": "@spotlightjs/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@spotlight/ui/*": ["src/ui/*"],
      "@spotlight/sidecar/*": ["src/sidecar/*"],
      "@spotlight/shared/*": ["src/shared/*"]
    },
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["src/electron/**/*", "src/electron-renderer.ts", "**/__tests__/**/*", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
