{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-bin/**", ".next/**", "!.next/cache/**", "out/**"],
      "env": [
        "FOSSILIZE_PLATFORMS",
        "FOSSILIZE_SIGN",
        "APPLE_CERT_PASSWORD",
        "APPLE_CERT_PATH",
        "APPLE_TEAM_ID",
        "APPLE_API_KEY_PATH"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "@spotlightjs/overlay#dev": {
      "with": ["@spotlightjs/sidecar#dev"],
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "**/junit.xml"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "**/junit.xml", "**/test-results/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "yalc:publish": {
      "dependsOn": ["build"],
      "cache": false
    }
  },
  "globalDependencies": ["biome.json", "tsconfig.json", "package.json"]
}
