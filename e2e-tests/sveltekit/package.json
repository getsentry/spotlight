{
	"name": "@spotlightjs/e2e-tests-sveltekit",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"clean": "rimraf .svelte-kit",
		"test:e2e:prepare": "playwright install --with-deps",
		"test:e2e": "playwright test",
		"test:e2e:ci": "pnpm test:e2e:prepare && pnpm test:e2e"
	},
	"dependencies": {
		"@sentry/sveltekit": "8.7.0"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.48.0",
		"@spotlightjs/spotlight": "workspace:*",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/kit": "^2.8.3",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/cookie": "^0.5.4",
		"@types/node": "20.10.4",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"tslib": "^2.7.0",
		"typescript": "^5.6.2",
		"vite": "^5.4.11",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"volta": {
		"extends": "../../package.json"
	}
}
